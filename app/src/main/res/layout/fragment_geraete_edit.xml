<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context =".ui.geraete.geraet_edit.GeraeteEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/geraet_edit_TextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/geraet_new_TextName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/geraete_edit_EditName"
            android:hint="@string/geraet_new_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/geraet_edit_TextName"
            app:layout_constraintTop_toBottomOf="@+id/geraet_edit_TextName"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/geraete_edit_TextRaum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextRaum"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_EditName"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_EditName" />

        <Spinner
            android:id="@+id/geraete_edit_RaumSpinner"
            android:layout_width="@dimen/spinner_geraet_width"
            android:layout_height="@dimen/spinner_geraet_height"
            android:layout_marginTop="@dimen/spinner_geraet_margin_bottom"
            android:dropDownWidth="@dimen/spinner_geraet_dropdown_width"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_TextRaum"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_TextRaum"/>

        <TextView
            android:id="@+id/geraete_edit_TextKategorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextKategorie"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_RaumSpinner"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_RaumSpinner" />

        <Spinner
            android:id="@+id/geraete_edit_KategorieSpinner"
            android:layout_width="@dimen/spinner_geraet_width"
            android:layout_height="@dimen/spinner_geraet_height"
            android:layout_marginTop="@dimen/spinner_geraet_margin_bottom"
            android:dropDownWidth="@dimen/spinner_geraet_dropdown_width"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_TextKategorie"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_TextKategorie"/>

        <TextView
            android:id="@+id/geraete_edit_TextVolllast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextVolllast"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_KategorieSpinner"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_KategorieSpinner" />

        <TextView
            android:id="@+id/geraete_edit_TextZeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextZeit"

            app:layout_constraintRight_toLeftOf="@+id/geraete_edit_TextVolllast"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_KategorieSpinner"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_KategorieSpinner" />

        <EditText
            android:id="@+id/geraete_edit_EditVolllast"
            android:inputType="numberDecimal"

            android:layout_width="wrap_content"
            android:hint="z.B 180.0"

            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_TextVolllast"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_TextVolllast"
            />


        <EditText
            android:id="@+id/geraete_edit_EditZeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"

            android:layout_marginLeft="240dp"

            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"
            android:hint="z.B 8.0"
            app:layout_constraintRight_toLeftOf="@+id/geraete_edit_EditVolllast"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_TextVolllast"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_TextVolllast" />

        <TextView
            android:id="@+id/geraete_edit_TextStandBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextStandBy"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_EditVolllast"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_EditVolllast" />

        <EditText
            android:id="@+id/geraete_edit_EditStandBy"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="z.B 10.5"


            app:layout_constraintStart_toStartOf="@+id/geraete_edit_TextStandBy"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_TextStandBy" />

        <CheckBox android:id="@+id/geraete_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:text="@string/geraet_new_TextUrlaubsmodus"
            app:layout_constraintStart_toStartOf="@+id/geraete_edit_EditStandBy"
            app:layout_constraintTop_toBottomOf="@+id/geraete_edit_EditStandBy"/>

        <Button
            android:id="@+id/geraete_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_speichern"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geraete_checkbox"
            />

        <Button
            android:id="@+id/geraete_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="296dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="35dp"
            android:background="@color/colorDarkRed"
            android:text="@string/button_loeschen"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geraete_checkbox" />

        <Button
            android:id="@+id/geraete_edit_button_abbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDarkGreen"
            android:text="@string/button_abbrechen"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geraete_checkbox"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
