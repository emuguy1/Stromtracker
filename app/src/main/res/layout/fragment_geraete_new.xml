<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context =".ui.geraete.geraet_new.GeraeteNewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/geraet_new_TextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/geraet_new_TextName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/geraete_new_EditName"
        android:hint="@string/geraet_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/geraet_new_TextName"
        app:layout_constraintTop_toBottomOf="@+id/geraet_new_TextName"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/geraete_new_TextRaum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/geraet_new_TextRaum"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_EditName"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_EditName" />

    <Spinner
        android:id="@+id/geraete_new_RaumSpinner"
        android:layout_width="@dimen/spinner_geraet_width"
        android:layout_height="@dimen/spinner_geraet_height"
        android:layout_marginTop="@dimen/spinner_geraet_margin_bottom"
        android:dropDownWidth="@dimen/spinner_geraet_dropdown_width"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_TextRaum"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_TextRaum"/>

    <TextView
        android:id="@+id/geraete_new_TextKategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/geraet_new_TextKategorie"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_RaumSpinner"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_RaumSpinner" />

    <Spinner
        android:id="@+id/geraete_new_KategorieSpinner"
        android:layout_width="@dimen/spinner_geraet_width"
        android:layout_height="@dimen/spinner_geraet_height"
        android:layout_marginTop="@dimen/spinner_geraet_margin_bottom"
        android:dropDownWidth="@dimen/spinner_geraet_dropdown_width"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_TextKategorie"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_TextKategorie"/>

    <TextView
        android:id="@+id/geraete_new_TextVolllast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/geraet_new_TextVolllast"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_KategorieSpinner"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_KategorieSpinner" />

        <TextView
            android:id="@+id/geraete_new_TextZeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="24dp"
            android:text="@string/geraet_new_TextZeit"

            app:layout_constraintRight_toLeftOf="@+id/geraete_new_TextVolllast"
            app:layout_constraintStart_toStartOf="@+id/geraete_new_KategorieSpinner"
            app:layout_constraintTop_toBottomOf="@+id/geraete_new_KategorieSpinner" />

        <EditText
        android:id="@+id/geraete_new_EditVolllast"
        android:inputType="numberDecimal"

        android:layout_width="wrap_content"
            android:hint="z.B 180.0"

        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_TextVolllast"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_TextVolllast"
        />


        <EditText
            android:id="@+id/geraete_new_EditZeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"

            android:layout_marginLeft="240dp"

            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"
            android:hint="z.B 8.0"
            app:layout_constraintRight_toLeftOf="@+id/geraete_new_EditVolllast"
            app:layout_constraintStart_toStartOf="@+id/geraete_new_TextVolllast"
            app:layout_constraintTop_toBottomOf="@+id/geraete_new_TextVolllast" />

        <TextView
        android:id="@+id/geraete_new_TextStandBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/geraet_new_TextStandBy"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_EditVolllast"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_EditVolllast" />

    <EditText
        android:id="@+id/geraete_new_EditStandBy"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="z.B 10.5"


        app:layout_constraintStart_toStartOf="@+id/geraete_new_TextStandBy"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_TextStandBy" />

    <CheckBox android:id="@+id/geraete_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:text="@string/geraet_new_TextUrlaubsmodus"
        app:layout_constraintStart_toStartOf="@+id/geraete_new_EditStandBy"
        app:layout_constraintTop_toBottomOf="@+id/geraete_new_EditStandBy"/>

        <Button
            android:id="@+id/geraete_new_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_speichern"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geraete_checkbox"
            />

        <Button
            android:id="@+id/geraete_new_button_abbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDarkGreen"
            android:text="@string/button_abbrechen"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geraete_checkbox"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
