<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/geraet_cardview_margin">

        <Button
            android:id="@+id/geraete_auswertung_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geraet_auswertung_button_back" />

        <TextView
            android:id="@+id/geraete_auswertung_text_auswertung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/geraet_auswertung_text_auswertung"
            android:textSize="@dimen/content_text_bigger"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/geraet_cardview_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aa_chart_verbraucher"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/anyChart_height">
                    </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
                    <TextView
                        android:id="@+id/geraete_auswertung_text_durchschnitt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/content_margin_small" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/geraet_cardview_margin">
                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/aa_chart_kategorie"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/anyChart_height" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/geraet_cardview_margin">
                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/aa_chart_raum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/anyChart_height" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/geraet_cardview_margin">
                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/aa_chart_produzent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/anyChart_height" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/geraet_cardview_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aa_chart_bilanz"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/anyChart_height"
                        android:layout_margin="@dimen/geraet_cardview_margin" />
                    <TextView
                        android:id="@+id/geraete_auswertung_text_bilanz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/geraet_auswertung_text_bilanz" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
