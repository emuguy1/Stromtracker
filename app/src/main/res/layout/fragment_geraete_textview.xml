<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundGrey">

    <androidx.cardview.widget.CardView
        android:id="@+id/geraete_recycler_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/geraet_cardview_margin"
        android:layout_marginTop="@dimen/geraet_cardview_margin"
        android:layout_marginEnd="@dimen/geraet_cardview_margin"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7.125">

            <ImageView
                android:id="@+id/geraete_recycler_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/geraet_cardview_margin"
                android:layout_marginLeft="@dimen/geraet_cardview_margin"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="@dimen/geraet_cardview_margin"
                android:layout_marginRight="@dimen/geraet_cardview_margin"
                android:layout_marginBottom="0dp"
                android:layout_weight="1">

            </ImageView>


            <TextView
                android:id="@+id/geraete_recycler_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/geraet_cardview_margin"
                android:layout_marginEnd="@dimen/geraet_cardview_margin"
                android:layout_marginBottom="@dimen/geraet_cardview_margin"
                android:layout_weight="2.625"
                android:background="@color/colorWhite"
                android:gravity="start"
                android:hint="@string/geraete_hint"
                android:textSize="@dimen/geraet_text_recycler"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/geraete_recycler_raum"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/geraet_cardview_margin"
                android:layout_marginEnd="@dimen/geraet_cardview_margin"
                android:layout_marginBottom="@dimen/geraet_cardview_margin"
                android:layout_weight="1.75"

                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:hint="@string/geraete_hint"
                android:textSize="@dimen/geraet_text_recycler" />

            <TextView
                android:id="@+id/geraete_recycler_verbrauch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/geraet_cardview_margin"
                android:layout_marginEnd="@dimen/geraet_cardview_margin"
                android:layout_marginBottom="@dimen/geraet_cardview_margin"
                android:layout_weight="1.75"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:hint="@string/geraete_hint"
                android:textSize="@dimen/geraet_text_recycler" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
