<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_margin_sides_small">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.home.HomeFragment">


                <TextView
                    android:id="@+id/home_headline_def"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_margin_sides_small"
                    android:layout_marginTop="@dimen/content_margin_top"
                    android:layout_marginEnd="@dimen/content_margin_sides_small"
                    android:layout_marginBottom="@dimen/content_margin_bottom"
                    android:text="@string/home_headline_desc"
                    android:textSize="@dimen/content_text_bigger"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/home_text_def"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_margin_sides_small"
                    android:layout_marginTop="@dimen/content_margin_top"
                    android:layout_marginEnd="@dimen/content_margin_sides_small"
                    android:layout_marginBottom="@dimen/content_margin_bottom"
                    android:text="@string/home_text_desc"
                    android:textSize="@dimen/content_text_normal"
                    app:layout_constraintBottom_toTopOf="@id/home_headline_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_headline_def"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/home_headline_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_margin_sides_small"
                    android:layout_marginTop="@dimen/content_margin_top"
                    android:layout_marginEnd="@dimen/content_margin_sides_small"
                    android:layout_marginBottom="@dimen/content_margin_bottom"
                    android:text="@string/home_headline_info"
                    android:textSize="@dimen/content_text_bigger"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_text_def"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/home_text_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_margin_sides_small"
                    android:layout_marginTop="@dimen/content_margin_top"
                    android:layout_marginEnd="@dimen/content_margin_sides_small"
                    android:layout_marginBottom="@dimen/content_margin_bottom"
                    android:text="@string/home_text_info"
                    android:textSize="@dimen/content_text_normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_headline_info"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
